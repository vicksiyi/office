</i-panel>
<i-panel title="答案">
  <view class="select">
    <radio-group bindchange="radioChange">
      <view class="item">
        <radio color="#2d8cf0" value="0" />A
      </view>
      <view class="item">
        <radio color="#2d8cf0" value="1" />B
      </view>
      <view class="item">
        <radio color="#2d8cf0" value="2" />C
      </view>
      <view class="item">
        <radio color="#2d8cf0" value="3" />D
      </view>
    </radio-group>
  </view>
</i-panel>
<i-message id="message" />
<view>
  <button bindtap="add" style="background:#2d8cf0;color:#fff;">添加单选题</button>
</view>
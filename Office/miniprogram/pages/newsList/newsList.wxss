.news .item {
  display: flex;
  flex-direction: row;
  width: 720rpx;
  margin: 30rpx auto;
  height: 200rpx;
}

.news .line {
  width: 720rpx;
  height: 1rpx;
  background: #80848f;
  opacity: 0.2;
  margin: auto;
}

/* .news .item .img {
  width: 200rpx;
  height: 200rpx;
} */

.news .item .img image {
  width: 190rpx;
  height: 190rpx;
}

.news .item .right {
  width: 520rpx;
  padding: 0 20rpx 0 20rpx;
  font-size: 30rpx;
  color: #495060;
}

.news .item .right .title {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}

.news .item .right .msg {
  margin-top: 30rpx;
}
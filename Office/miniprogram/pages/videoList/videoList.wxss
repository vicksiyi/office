.video-list {
  display: flex;
  flex-wrap: wrap;
}

.video-list .item {
  width: 300rpx;
  height: 400rpx;
  position: relative;
  margin-left: 50rpx;
  margin-top: 20rpx;
  border-radius: 10rpx;
  overflow: hidden;
}

.video-list .item image {
  width: 300rpx;
  height: 400rpx;
}

.video-list .item .title {
  position: absolute;
  bottom: 0;
  right: 0;
  /* max-width: 250rpx; */
  text-align: center;
  width: 300rpx;
  background: #2d8cf0;
  padding: 10rpx;
  color: #fff;
  font-weight: normal;
  font-size: 30rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
}

.mask .video {
  width: 600rpx;
  height: 510rpx;
  margin: 290rpx auto;
  position: relative;
}

.mask .title {
  height: 60rpx;
  line-height: 60rpx;
  width: 600rpx;
  text-align: center;
  margin: auto;
  background: #fff;
  color: #495060;
}

.close {
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  top: -70rpx;
  right: 0;
}
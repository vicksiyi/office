.text-box {
  margin: 20rpx 28rpx;
  width: 694rpx;
  background: #fff;
  border-radius: 16rpx;
  box-sizing: border-box;
  padding: 20rpx;
  position: relative;
}

.textArea {
  width: 654rpx;
}

.wordwrap {
  position: absolute;
  right: 12rpx;
  bottom: 12rpx;
}

.img {
  width: 200rpx;
  height: 200rpx;
  margin: auto;
}

.img image {
  width: 200rpx;
  height: 200rpx;
}

.video {
  width: 600rpx;
  height: 400rpx;
  margin: auto;
}

.video video {
  width: 600rpx;
  height: 400rpx;

}

.video image {
  width: 600rpx;
  height: 400rpx;
  text-align: center;
}

.add-tag {
  width: 700rpx;
  margin: auto;
  display: flex;
  flex-direction: row;
  height: 120rpx;
}

.add-tag .input {
  width: 580rpx;
  height: 120rpx;
}

.add-tag .btn {
  line-height: 120rpx;
  margin-top: 20rpx;
}

.tag-list {
  width: 700rpx;
  margin: auto;
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 30rpx;
}


.tag-list .item {
  margin-left: 10rpx;
}
<i-panel title="题目">
  <view class="text-box">
    <textarea name="review" maxlength="{{maxNumber}}" class="textArea" value="{{inputText}}" bindinput='inputText'
      placeholder="请输入判断题题目..."></textarea>
    <span class="wordwrap">{{number}}/{{maxNumber}}</span>
  </view>
</i-panel>
<i-panel title="选项A">
  <view class="text-box">
    <textarea name="review" maxlength="{{maxNumber}}" class="textArea" value="{{inputText1}}" bindinput='inputText1'
      placeholder="请输入选项A..."></textarea>
    <span class="wordwrap">{{number1}}/{{maxNumber}}</span>
  </view>
</i-panel>

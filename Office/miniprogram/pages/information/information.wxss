page {
  background: #fff;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  overflow: hidden;
  margin: 30rpx auto;
  position: relative;
}

.avatar image {
  width: 160rpx;
  height: 160rpx;
}

.avatar .font {
  color: #fff;
  width: 100%;
  height: 50rpx;
  background: #fff;
  margin-top: 110rpx;
  background-image: linear-gradient(#80848f, #bbbec4);
  text-align: center;
  font-family: serif;
  position: absolute;
  bottom: 0;
}

.btn {
  display: flex;
  flex-wrap: wrap;
  margin-top: 40rpx;
}

